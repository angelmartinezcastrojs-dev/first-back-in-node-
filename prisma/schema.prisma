// 1. El generador del cliente
generator client {
  provider = "prisma-client-js"  // ERROR: Antes decía "prisma-client" (incorrecto)
  output   = "../generated"      // Recomendación: Fuera de src para evitar líos de rootDir
}

// 2. La fuente de datos
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // ERROR: Debe estar aquí, no en el generator
}

model todo {
  id          Int       @id @default(autoincrement())
  text        String    @db.VarChar
  completedAt DateTime? @db.Timestamp()
}